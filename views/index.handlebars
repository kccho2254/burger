<h1>Burger Logger</h1>


<h2>Burgers that aren't devoured</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
    <li>{{this.id}} : {{this.name}} : 
        <button class="change-existence" data-id="{{this.id}}" data-newdevour="{{this.name}}">Consume</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>



<h2>Burgers that are devoured</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
     <li>{{this.id}} : {{this.name}} : 
       <button class="delete-burg" data-id="{{this.id}}">Throw away</button>
      </li>
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Yes!<br>
    <input type="radio" name="devoured" value="0"> No
  </div>

  <button type="submit">Add Burger</button>
</form>